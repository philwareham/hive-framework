<!DOCTYPE html>
<html lang="en-gb">
<head>
    <txp:output_form form="head" />
    <title><txp:page_title /></title>
    <txp:if_search>
        <meta name="robots" content="none">
    <txp:else />
        <txp:if_author>
            <meta name="robots" content="noindex, follow">
        <txp:else />
            <txp:meta_description />
            <txp:if_category>
                <meta name="robots" content="noindex, follow">
            <txp:else />
                <txp:article pgonly="1" limit="5" />
                <txp:variable name="page" value='<txp:page_url type="pg" />' />
                <txp:if_variable name="page" value="1">
                    <meta name="robots" content="index, follow">
                    <link rel="canonical" href="<txp:site_url />">
                <txp:else />
                    <meta name="robots" content="noindex, follow">
                </txp:if_variable>
                <txp:variable name="front-page" value="1" />
            </txp:if_category>
        </txp:if_author>
    </txp:if_search>
</head>

<txp:if_section name="">
    <txp:if_search>
        <body class="search-page" itemscope itemtype="https://schema.org/SearchResultsPage">
    <txp:else />
        <txp:if_category>
            <body class="listing-page" itemscope itemtype="https://schema.org/CollectionPage">
        <txp:else />
            <txp:if_author>
                <body class="listing-page" itemscope itemtype="https://schema.org/CollectionPage">
            <txp:else />
                <body class="front-page" itemscope itemtype="https://schema.org/WebPage">
            </txp:if_author>
        </txp:if_category>
    </txp:if_search>
<txp:else />
    <body class="<txp:section />-page" itemscope itemtype="https://schema.org/WebPage">
</txp:if_section>

    <txp:output_form form="body_header" />
    <div class="wrapper">
        <div class="container">
            <main id="main" aria-label="Main content">

                <txp:if_search>

                    <h1 itemprop="name">Search results</h1>
                    <txp:output_form form="search_results" />

                <txp:else />

                    <txp:if_category>

                        <h1 itemprop="name">Category: <txp:category title="1" /></h1>
                        <txp:article class="article-list" form="article_listing" limit="5" wraptag="ul" />

                    <txp:else />

                        <txp:if_author>

                            <h1>Author: <txp:author /></h1>
                            <txp:article class="article-list" form="article_listing" limit="5" wraptag="ul" />

                        <txp:else />

                            <txp:article limit="5" />

                        </txp:if_author>
                    </txp:if_category>

                    <txp:evaluate>
                        <nav class="paginator" aria-label="Article navigation">
                            <txp:evaluate>
                                <a rel="prev" href="<txp:newer />" title="Go to newer articles" aria-label="Go to newer articles">Newer</a>
                            </txp:evaluate>
                            <txp:evaluate>
                                <a rel="next" href="<txp:older />" title="Go to older articles" aria-label="Go to older articles">Older</a>
                            </txp:evaluate>
                        </nav>
                    </txp:evaluate>

                </txp:if_search>

            </main>
            <txp:output_form form="complementary" />
        </div>
    </div>
    <txp:output_form form="body_footer" />
</body>
</html>
